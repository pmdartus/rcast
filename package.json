{
  "name": "rcast",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write '{src,scripts}/**/*.{js,css,json,html}'",
    "lint": "eslint src/ scripts/",
    "start": "webpack-dev-server --config=./scripts/webpack.dev.js",
    "build": "webpack --config=./scripts/webpack.prod.js"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@lwc/compiler": "1.0.0",
    "@lwc/engine": "1.0.0",
    "@lwc/eslint-plugin-lwc": "^0.8.0",
    "@lwc/rollup-plugin": "1.0.0",
    "@lwc/synthetic-shadow": "1.0.0",
    "@lwc/wire-service": "1.0.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^2.0.2",
    "copy-webpack-plugin": "^5.0.3",
    "eslint": "^6.8.0",
    "html-webpack-plugin": "next",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "lwc-webpack-plugin": "^0.2.0",
    "navigo": "^7.1.2",
    "preload-webpack-plugin": "next",
    "prettier": "^1.18.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1",
    "webpack-merge": "^4.2.1",
    "workbox-webpack-plugin": "^4.3.1"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "all",
    "singleQuote": true,
    "overrides": [
      {
        "files": "**/*.html",
        "options": {
          "parser": "lwc"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,scripts}/**/*.js": [
      "eslint --fix"
    ],
    "{src,scripts}/**/*.{js,json,css,html}": [
      "prettier --write"
    ]
  }
}
