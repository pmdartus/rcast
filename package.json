{
  "name": "rcast",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write '{src,scripts}/**/*.{js,css,json,html}'",
    "lint": "eslint src/ scripts/",
    "test": "jest",
    "build:dev": "webpack --config=./scripts/webpack.dev.js",
    "build:prod": "webpack --config=./scripts/webpack.prod.js",
    "build:watch": "webpack-dev-server --config=./scripts/webpack.dev.js",
    "postinstall": "yarn build:prod",
    "start": "node ./src/server/index.js"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "express-sslify": "^1.2.0",
    "express-winston": "^4.0.3",
    "feedparser": "^2.2.9",
    "helmet": "^3.21.2",
    "node-cache": "^5.1.0",
    "request": "^2.88.2",
    "sanitize-html": "^1.21.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@lwc/compiler": "1.0.0",
    "@lwc/engine": "1.0.0",
    "@lwc/eslint-plugin-lwc": "^0.6.0",
    "@lwc/jest-preset": "1.0.0",
    "@lwc/rollup-plugin": "1.0.0",
    "@lwc/synthetic-shadow": "1.0.0",
    "@lwc/wire-service": "1.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^2.0.2",
    "copy-webpack-plugin": "^5.0.3",
    "eslint": "^5.10.0",
    "html-webpack-plugin": "next",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "lint-staged": "^8.1.0",
    "lwc-webpack-plugin": "^0.2.0",
    "navigo": "^7.1.2",
    "nock": "^10.0.4",
    "preload-webpack-plugin": "next",
    "prettier": "^1.15.3",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "supertest": "^3.3.0",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1",
    "webpack-merge": "^4.2.1",
    "workbox-webpack-plugin": "^4.3.1"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "all",
    "singleQuote": true,
    "overrides": [
      {
        "files": "**/*.html",
        "options": {
          "parser": "lwc"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,scripts}/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "{src,scripts}/**/*.{js,json,css,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
